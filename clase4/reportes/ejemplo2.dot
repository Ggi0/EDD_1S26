digraph MatrizDispersa {
    labelloc="t";
    fontsize=16;
    fontname="Arial Bold";
    nodesep=0.6;
    ranksep=0.7;

    node [shape=box, style=filled, fontname="Arial", fontsize=11];
    edge [fontcolor=black, fontsize=9];

    // Nodo origen (esquina)
    origen [label="filas/columna",  fontsize=10];

    // === CABECERAS DE COLUMNAS ========
cab_col_0 [label="Col 0", group=1, fillcolor="#2980b9", fontcolor=white];
cab_col_1 [label="Col 1", group=2, fillcolor="#2980b9", fontcolor=white];
cab_col_2 [label="Col 2", group=3, fillcolor="#2980b9", fontcolor=white];
cab_col_3 [label="Col 3", group=4, fillcolor="#2980b9", fontcolor=white];

    // =========== CABECERAS DE FILAS =====
cab_fil_0 [label="Fil 0", group=0, fillcolor="#27ae60", fontcolor=white];
cab_fil_1 [label="Fil 1", group=0, fillcolor="#27ae60", fontcolor=white];
cab_fil_2 [label="Fil 2", group=0, fillcolor="#27ae60", fontcolor=white];
cab_fil_3 [label="Fil 3", group=0, fillcolor="#27ae60", fontcolor=white];

    // ========= NODOS DATO (elementos no-cero) ====+==
dato_0_0 [label="(0,0)\nEl Padrino\n1972 | 175min", group=1, fillcolor="#ecf0f1"];
dato_1_0 [label="(1,0)\nDjango Unchained\n2012 | 165min", group=1, fillcolor="#ecf0f1"];
dato_1_1 [label="(1,1)\nPulp Fiction\n1994 | 154min", group=2, fillcolor="#ecf0f1"];
dato_2_1 [label="(2,1)\nMemento\n2000 | 113min", group=2, fillcolor="#ecf0f1"];
dato_2_2 [label="(2,2)\nInception\n2010 | 148min", group=3, fillcolor="#ecf0f1"];
dato_3_3 [label="(3,3)\nEl SeÃ±or de los Anillos\n2001 | 178min", group=4, fillcolor="#ecf0f1"];

    // FLECHAS HORIZONTALES (por fila) ============
    cab_fil_0 -> dato_0_0 [dir=both, color="#27ae60"];
    cab_fil_1 -> dato_1_0 [dir=both, color="#27ae60"];
    dato_1_0 -> dato_1_1 [dir=both, color="#27ae60"];
    cab_fil_2 -> dato_2_1 [dir=both, color="#27ae60"];
    dato_2_1 -> dato_2_2 [dir=both, color="#27ae60"];
    cab_fil_3 -> dato_3_3 [dir=both, color="#27ae60"];

    // ========== FLECHAS VERTICALES (por columna) =====
    cab_col_0 -> dato_0_0 [dir=both, color="#2980b9"];
    dato_0_0 -> dato_1_0 [dir=both, color="#2980b9"];
    cab_col_1 -> dato_1_1 [dir=both, color="#2980b9"];
    dato_1_1 -> dato_2_1 [dir=both, color="#2980b9"];
    cab_col_2 -> dato_2_2 [dir=both, color="#2980b9"];
    cab_col_3 -> dato_3_3 [dir=both, color="#2980b9"];

    // alineacion
    // Fila superior: origen y cabeceras de columna
    { rank=same; origen; cab_col_0; cab_col_1; cab_col_2; cab_col_3; }
    { rank=same; cab_fil_0; dato_0_0; }
    { rank=same; cab_fil_1; dato_1_0; dato_1_1; }
    { rank=same; cab_fil_2; dato_2_1; dato_2_2; }
    { rank=same; cab_fil_3; dato_3_3; }

    // Enlace de encuadre superior (no se ve)
    origen -> cab_col_0 [style=invis];
    cab_col_0 -> cab_col_1 [style=invis];
    cab_col_1 -> cab_col_2 [style=invis];
    cab_col_2 -> cab_col_3 [style=invis];

    // Enlace de encuadre izquierdo (no se ve)
    origen -> cab_fil_0 [style=invis];
    cab_fil_0 -> cab_fil_1 [style=invis];
    cab_fil_1 -> cab_fil_2 [style=invis];
    cab_fil_2 -> cab_fil_3 [style=invis];
}
